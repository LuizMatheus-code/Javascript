algoritmo "Primeiro"
var
   primeiro_numero: real
   segundo_numero: real
   soma: real
inicio
      Escreval("Digite o primeiro número: ")
      Leia(primeiro_numero)
      Escreval("Digite o segundo número: ")
      Leia(segundo_numero)
      soma <- primeiro_numero + segundo_numero
      Escreva("a soma entre os números é:", soma)
fimalgoritmo
